/* pages/me/me.wxss */
page {
  background-color: rgba(245,245,245,1);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user_name {
  font-size: 30rpx;
  color: rgba(255,255,255,1);
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header {
  width: 100%;
  position: relative;
}

.header_bg {
  width: 100%;
}

.header_mess {
  display: flex;
  flex-direction: column;
  position: absolute;
  margin-top: 30rpx;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  align-content: center;
  z-index: 100;
}

.header_box {
  width: 100%;
  height: 360rpx;
  position: relative;
  background: linear-gradient(#6aafe6,#8ec0e4);
  background: linear-gradient(#3f4040,#5e5e5f);
}

.header_bottom_bg {
  width: 100%;
  position: absolute;
  bottom: -2rpx;
  height: 64rpx;
}

.avatar_box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.3);
  position: relative;
  margin: 0 auto;
}

.avatar {
  position: absolute;
  width: 108rpx;
  height: 108rpx;
  border-radius: 54rpx;
  left: 6rpx;
  top: 6rpx;
}

.login {
  color: rgba(153,153,153,1);
  width: 120rpx;
  padding: 5rpx;
  text-align: center;
  border-radius: 14rpx;
  margin-top: 5rpx;
}

button::after {
  border: none;
}

.home_list {
  margin: 20rpx 30rpx;
  box-sizing: border-box;
}

.list_box {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 46rpx 30rpx 46rpx 40rpx;
  border-radius: 16rpx;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-left {
  display: flex;
  align-items: center;
}

.pay_icon {
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}

.right_icon {
  width: 20rpx;
  height: 30rpx;
}

.left_text {
  font-size: small;
  padding-left: 40rpx;
}

.title {
  display: block;
  height: 30rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Semibold;
  line-height: 30rpx;
}

.message {
  height: 26rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(153,153,153,1);
  line-height: 26rpx;
}