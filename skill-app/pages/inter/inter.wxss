/* pages/inter/inter.wxss */

page {
  background-color: rgba(245,245,245,1);
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 100rpx 0 0 0;
  background-color: #f5f5f5;
  width: 100%;
}

.header {
  z-index: 99;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  box-shadow: 0 0 6rpx 0 #e3e3e3;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}

.box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 100rpx;
  height: 68rpx;
  width: 700rpx;
  color: #999;
  background-color: #f5f5f5;
}

.box image {
  margin: 0 20rpx -4rpx 0;
  width: 28rpx;
  height: 28rpx;
}

.head-img {
  margin: 40rpx 0 0 0;
  width: 106rpx;
  height: 34rpx;
}

.list_boxx {
  width: 100%;
  box-sizing: border-box;
  background: rgba(255,255,255,0);
  padding: 46rpx 30rpx 46rpx 40rpx;
  border-radius: 16rpx;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.redClass {
  padding: 16rpx;
  display: flex;
  flex-direction: row;
  margin: 25rpx;
  border-radius: 15rpx;
  background-color: gainsboro;
  box-shadow: 0 8rpx 12rpx 4rpx rgb(241,241,241);
}

.weui-grid__icon {
  width: 32px;
  height: 32px;
  margin: 0 auto;
}

.mainImg {
  width: 32px;
  height: 32px;
  margin: 0 auto;
}

.titleFront {
  margin-left: 25rpx;
}

.banner {
  width: 100%;
  overflow: hidden;
  margin: 0;
  padding: 0;
}

.notice {
  width: 100%;
  overflow: hidden;
  height: 60rpx;
  margin: 0;
  padding: 0;
  background: #FFF;
  display: flex;
  align-items: center;
}

.notice_icon {
  flex: 0 0 36rpx;
  height: 36rpx;
  margin-left: 70rpx;
  vertical-align: middle;
}

.notice_text {
  height: 60rpx;
  flex: 1;
  font-size: 24rpx;
  color: #F96432;
  line-height: 60rpx;
  margin-left: 18rpx;
  vertical-align: middle;
}

.content {
  width: 100%;
  background: #f5f5f5;
  min-height: 100VH;
  padding-bottom: 58rpx;
  font-size: 0;
}

.home_list {
  margin: 10rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.home_listx {
  margin: 10rpx 15rpx;
  box-sizing: border-box;
}

.list_box {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 46rpx 30rpx 46rpx 40rpx;
  border-radius: 16rpx;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-left {
  display: flex;
  align-items: center;
}

.pay_icon {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}

.right_icon {
  width: 20rpx;
  height: 30rpx;
}

.left_text {
  padding-left: 40rpx;
}

.title {
  display: block;
  height: 30rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Semibold;
  line-height: 30rpx;
  /* margin-bottom: 20rpx; */
}

.message {
  height: 26rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(153,153,153,1);
  line-height: 26rpx;
}

.body_gray {
  color: rgba(53,53,53,1);
}

