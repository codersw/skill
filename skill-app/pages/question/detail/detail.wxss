/* pages/question/detail/detail.wxss */
@import "../../../components/content/content.wxss";
page {
  background-color: rgba(245,245,245,1);
  height: 100%;
}

.bodya {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item {
  height: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.swiper-box {
  display: block;
  width: 100%;
  height: 100%;
  margin-top: 92rpx;
  overflow: hidden;
}

.swiper-items {
  height: 100%;
}

.scroll-views {
  height: 100%;
}

.question {
  font-weight: 700;
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  background: rgb(228,228,228);
  padding: 16rpx 16rpx 16rpx 16rpx;
  border-radius: 16rpx;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  word-break: break-all;
}

.margin_box {
  margin: 5rpx 20rpx;
  box-sizing: border-box;
  height: 90%;
}

.answer {
  word-break: break-all;
}

.rowClass {
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0.3rem;
}

.last_next_question {
  font-weight: 700;
  width: 100%;
  margin-left: 3rpx;
  margin-right: 3rpx;
  box-sizing: border-box;
  background: rgb(255,255,255);
  padding: 16rpx 16rpx 16rpx 16rpx;
  border-radius: 6rpx;
  flex-direction: column;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  word-break: break-all;
}

.answer_box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: rgb(255,255,255);
  padding: 16rpx 16rpx 16rpx 16rpx;
  border-radius: 16rpx;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0.06);
  display: flex;
  margin-top: 20rpx;
}