/* pages/question/list/list.wxss */
page {
  background-color: rgba(245,245,245,1);
}

.adContainer {
  width: 100%;
}

.itemImg {
  width: 42rpx;
  height: 42rpx;
  margin: 0 auto;
}

.font {
  font-size: small;
}

.itemBg {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  margin: 25rpx;
  border-radius: 15rpx;
  background-color: gainsboro;
  box-shadow: 0 8rpx 12rpx 4rpx rgb(241,241,241);
}

.home_list {
  margin: 20rpx 30rpx;
  box-sizing: border-box;
}

.list_box {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  background: #fff;
  padding: 26rpx 15rpx 26rpx 15rpx;
  border-radius: 16rpx;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-left {
  display: flex;
  overflow: hidden;
  align-items: center;
}

.pay_icon {
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}

.right_icon {
  width: 20rpx;
  height: 30rpx;
}

.left_text {
  font-size: small;
  overflow: hidden;
  padding-left: 40rpx;
  word-break: break-all;
}

.title {
  display: block;
  overflow: hidden;
  font-size: 30rpx;
  font-family: PingFangSC-Semibold;
  word-break: break-all;
}

.message {
  height: 26rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(153,153,153,1);
  line-height: 26rpx;
  word-break: break-all;
}