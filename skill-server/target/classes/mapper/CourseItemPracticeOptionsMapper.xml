<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skill.server.mapper.CourseItemPracticeOptionsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.skill.server.entity.pojo.CourseItemPracticeOptions">
        <id column="optionsid" property="optionsid" />
        <result column="practiceid" property="practiceid" />
        <result column="title" property="title" />
        <result column="memo" property="memo" />
        <result column="iscorrect" property="iscorrect" />
        <result column="num" property="num" />
        <result column="ctime" property="ctime" />
        <result column="utime" property="utime" />
        <result column="isdel" property="isdel" />
        <result column="imgurl" property="imgurl" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        optionsid, practiceid, title, memo, iscorrect, num, ctime, utime, isdel,imgurl
    </sql>

    <select id="selectckCourseItemPracticeOptions" resultMap="BaseResultMap">
        SELECT
            optionsid,
            practiceid,
            title,
            IFNULL(memo,'') memo,
            num,
            ctime,
            utime,
            isdel,
            IFNULL(imgurl,'') imgurl
        FROM
            `ck_course_item_practice_options`
        <where>
            practiceid =#{practiceid}
            and isdel='0'
            order by
            num + 0
        </where>
    </select>

    <!--查看选项是否正确-->
    <select id="selectRightAndWrong" resultType="int">
        SELECT iscorrect from ck_course_item_practice_options
        <where>
            optionsid=#{optionsid}
        </where>
    </select>


</mapper>
